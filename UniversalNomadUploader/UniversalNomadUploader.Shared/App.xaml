<Application
    x:Class="UniversalNomadUploader.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalNomadUploader"
    xmlns:common="using:UniversalNomadUploader.Common">

    <Application.Resources>
        <x:String x:Key="DatabaseName">db.sqlite</x:String>
        <x:String x:Key="AppName">Nomad Uploader</x:String>
        
        

        <!-- Global variables -->
        <x:String x:Key="BackGroundColour">#F2F2F2</x:String>
        <x:Double x:Key="LargeFontSize">22</x:Double>
        <x:Double x:Key="ExtraLargeFontSize">40</x:Double>

        <!-- Global solid colour brushes -->
        <SolidColorBrush x:Key="LogonBorderBrush" Color="#7CADD3"></SolidColorBrush>
        <SolidColorBrush x:Key="NomadBlue" Color="#7CADD3" ></SolidColorBrush>
        <SolidColorBrush x:Key="NomadBlue70Percent" Color="#7CADD3" Opacity="0.7" ></SolidColorBrush>
        <SolidColorBrush x:Key="NomadBlue20Percent" Color="#7CADD3" Opacity="0.2" ></SolidColorBrush>
        <SolidColorBrush x:Key="FadedLogon" Color="#7CADD3" Opacity="0.4" ></SolidColorBrush>

        <SolidColorBrush x:Key="ProgressBarBackgroundThemeBrush" Color="#59FFFFFF" />
        <SolidColorBrush x:Key="ProgressBarBorderThemeBrush" Color="Transparent" />
        <SolidColorBrush x:Key="ProgressBarForegroundThemeBrush" Color="LimeGreen" />
        <SolidColorBrush x:Key="ProgressBarIndeterminateForegroundThemeBrush" Color="LimeGreen" />
    
        <common:UploadedColorConverter x:Key="UploadColorConverter" />
        <common:UploadVisibilityConverter x:Key="UploadVisibilityConverter" />
        <common:UploadDateSymbolConverter x:Key="UploadDateSymbolConverter" />
        <common:UploadDateVisibilityConverter x:Key="UploadDateVisibilityConverter" />
        <common:UploadErrorMessageVisibilityConverter x:Key="UploadErrorMessageVisibilityConverter" />
        <common:UploadErrorMessageFlyoutMessageConverter x:Key="UploadErrorMessageFlyoutMessageConverter" />
        <common:UploadDateFlyoutConverter x:Key="UploadDateFlyoutConverter" />
        <common:NameToNameInfoConverter x:Key="NameToNameInfoConverter" />
        
        <!-- Global Image brushes -->
        <ImageBrush x:Key="HubBackgroundImageBrush" ImageSource="Assets/HubBackground.png"/>

        <Style x:Key="LogoutAppBarButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationBackButtonNormalStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="LogoutAppBarButton" />
            <Setter Property="AutomationProperties.Name" Value="Logout" />
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Viewbox RenderTransformOrigin="0.49,0.51">
                                <Viewbox.RenderTransform>
                                    <TransformGroup>
                                        <CompositeTransform Rotation="270" ScaleX="0.6" ScaleY="0.6" />
                                    </TransformGroup>
                                </Viewbox.RenderTransform>
                                <Path Stretch="Uniform"
                              Fill="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                              Data="F1  M 0,0
                                        L 15,0
                                        L 15,65
                                        L 90,65
                                        L 90,0
                                        L 105,0
                                        L 105,78
                                        L 0,78
                                        Z 
                                        M 45, 42.5
                                        L 60, 42.5
                                        L 60, -20
                                        L 70,-20
                                        L 52.5,-39
                                        L 35,-20
                                        L 45, -20
                                        Z " />
                            </Viewbox>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
